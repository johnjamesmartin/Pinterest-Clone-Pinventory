extends layout

block content
  br
  h2="Profile"
  h5.text-muted
    span(style="font-weight: 300;")=`${user.username}`
    span(style="font-weight: 300;")=` (#${user.githubId})`
  br
  p="Your pins"
  hr
  div(class="col-lg-6 row" style="border: 0px solid red;")
    each user_pin in user_pins
      div(class="col-lg-2" style="border: 0px solid cyan; text-align: center; padding: 3px;")
        table(border="0px" width="100%" height="100%")
          tr
            td(width="50%")
              a(href="/")
                img(src=user_pin.imageUrl width="65px" height="50px" style="border-radius: 0.3rem;")
          tr
            td(width="50%")
              a(href="/")
                small=user_pin.description
  br
  p="Your favs"
  hr
  div(class="col-lg-6 row" style="border: 0px solid red;")
    each favourite in favourites
      div(class="col-lg-2" style="border: 0px solid cyan; text-align: center; padding: 3px;")
          table(border="0px" width="100%" height="100%")
            tr
              td(width="50%")
                a(href="/")
                  img(src=favourite.imageUrl width="65px" height="50px" style="border-radius: 0.3rem;")
            tr
              td(width="50%")
                a(href="/")
                  if (favourite.description.length > 16)
                    small=favourite.description.substr(0, 16) + '...'
                  else
                    small=favourite.description