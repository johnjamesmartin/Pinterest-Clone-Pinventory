extends layout

block content
  if (pins)
    .grid
      .grid-sizer
      each pin in pins
        .grid-item(style="padding: 5px;" id=pin.id)
          img(src=`${pin.imageUrl}` alt=`${pin.description}`)
          p=pin.description
          div(class="pin-save btn btn-dark")
            span="Save "
            i.fa.fa-map-pin(style="font-size: 20px;")
          div(class="pin-link-external btn btn-sm btn-dark" style="border-radius: 1rem; opacity: 0.9;")
            i.fa.fa-arrow-right
            span=" Link"
  else
    p="No pins to display"
  