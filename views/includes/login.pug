if (currentUser)
  div(class="logout-container")
    table(width="100%" height="100%")
      tr
        td(class="text-center")
          span(class="form-control btn btn-sm btn-outline-none")
            a(href="/profile")
              img(class="mr-2" src=currentUser.avatar style="border-radius: 100%; width: 30px; height: 30px")
              span()=currentUser.username
        td
          a(href="/logout")
            button(class="form-control btn btn-sm btn-outline-secondary")="Logout"
else
  div(class="login-container")
    div(style="float: left; width: 200px;")
      a(href="/login/github")
        button(class="form-control btn btn-sm btn-outline-success" style="width: 200px;")
          i.fa.fa-github
          span=" Login"